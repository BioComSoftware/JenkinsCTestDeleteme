#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int main() {
		char ch;
		puts("Press ~ and Enter to stop");
		while(ch !='~'){
			ch=getchar();
		}
	}
	return EXIT_SUCCESS;
}
