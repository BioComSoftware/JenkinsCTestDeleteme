#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <unistd.h>

#define False 0
#define True !False
#define OMEGA ('Z' - 'A')

int main(void) {
	int done;
	long int r;
	char alpha;
	int count = 0;
	for(int i=0; i<1000; i++) {
		done=False;
		srandom((unsigned)time(NULL));
		while(!done){
			r = random() % OMEGA;
			alpha = 'A' + (char)r;
			if(alpha=='Q' && count > 8) done=True;
			putchar(alpha);
			count += 1;
		}
		printf("(%d)\n", i, alpha);
		nanosleep(1000, 1000);

//	putchar('\n');
	}
	return EXIT_SUCCESS;
}
